<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="729dp"
        android:duplicateParentState="false"
        android:paddingBottom="100dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/fragment_recipe_detail_image"
            android:layout_width="230dp"
            android:layout_height="161dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_recipe_detail_textViewTitle"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/fragment_recipe_detail_textViewTitle"
            android:layout_width="350dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_recipe_detail_instruction"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="192dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/favorite_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_recipe_detail_description" />

        <TextView
            android:id="@+id/fragment_recipe_detail_description"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/fragment_recipe_detail_image"
            app:layout_constraintHorizontal_bias="0.58"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_recipe_detail_textViewTitle" />

        <Button
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.794"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_recipe_detail_image" />

        <TableLayout
            android:id="@+id/ingredient_table"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_recipe_detail_instruction"
            app:layout_constraintVertical_bias="0.495">


        </TableLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>